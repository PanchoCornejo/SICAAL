{{>navigation3}}
{{>message}} 

<div class="main" style="max-width : 50em">
    
    {{#if servi}}
    <h2>Mis Ordenes</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each servi}}
   <div class="col">
    <div class="card h-100">
      <img src="https://img.freepik.com/vector-gratis/vehiculo-excavadora-trabajando_1308-41657.jpg?w=2000" class="card-img-top" alt="..." style="width: 300px; height: 300px;">
      <div class="card-body">
        <h5 class="card-title">Nombre: {{nombre }}</h5>
            <p class="card-text">Descripcion: {{description}}</p>
      </div>
      <div class="card-footer">
        <div class="row">        
            <div class="col">
                <a href="/Cliente/Evaluar/{{id}}">
                    <button class="btn btn-warning">Evaluar Servicio</button>
                </a>
            </div>
        </div>
      </div>
    </div>
  </div>
  
    {{/each}}
    </div>
    {{else}}
    <div class="container"></div>
        <div class="col-md-4 mx-auto mt-5">
            <div class="card card-body text-center">
                <p>No tienes ordenes</p>
                <i class="fa-solid fa-ghost fa-4x"></i>
            </div>
        </div>
    {{/if}}

</div>