                <form action="/panelA/ServicioaDetalle" method="POST" class="row g-3 novalidate was-validated"  novalidate>
                  <input id="id" name="id" type="hidden" value="{{id}}">
                  <div class="col-md-6">
                      <button type="submit" class="btn btn-success">Detalles</button>
                  </div>
                </form>
                </div>


