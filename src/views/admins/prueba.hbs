                        <input type="text" value="{{otronombre.id}}" class="form-control" id="ServiD" name="ServiD" placeholder="{{otronombre.id}}" required>
                        <div class="invalid-feedback">
                            Entrega el ID del servicio a conectar!
                        </div>
                    </div>
                    
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Enviar Datos</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>