<div class="container mt-2 mb-5">
    {{#if datos}}
        <h2>Servicios</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each datos}}

             <div class="col">
                <div class="card h-100">
                    <img src="https://img.freepik.com/vector-gratis/vehiculo-excavadora-trabajando_1308-41657.jpg?w=2000" class="card-img-top" alt="..." style="width: 300px; height: 300px;">
                        <div class="card-body">
                            <h5 class="card-title">Nombre: {{nombre }}</h5>
                                <p class="card-text">Marca: {{marca}}</p>
                                <p class="card-text">Año: {{ano}}</p>
                                <p class="card-text">Modelo: {{modelo}}</p>
                                <p class="card-text">Horometro: {{horometro}}</p>
                                <p class="card-text">Operador: {{operador}}</p>
                                <p class="card-text">Estado: {{estado}}</p>
                                <p class="card-text">Categoría: {{categoria}}</p>
                                <p class="card-text">Descripción: {{description}}</p>
                        </div>
                        
                            <div class="card-footer">
                                <div class="row">
                                    <div class="">
                                        <form action="detalle" method="POST" class="row g-3 novalidate was-validated"  novalidate>
                     <input id="id" name="id" type="hidden" value="{{id}}">
                     <div class="col-md-6">
                           <button type="submit" class="btn btn-primary">Ver Detalles</button>
                     </div>
                     </form>
                                    </div>                                   
                                
                                </div>
                            </div>
                       
                    
        
                </div>

            </div>

        {{/each}}



    {{else}}
        <h1>No hay Servicios disponibles </h1>


    {{/if}}
</div>