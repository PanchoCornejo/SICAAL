<div class="container mt-2 mb-5">
    {{#if datos}}        
        <div class="card mb-3">
        <div class="row">
            <div class="col">
                <h3 class="ms-2">Filtros</h3> 
            </div>
            </div>
                <div class="row ms-2 ">
                <form action="/servicios" method="POST" class="row g-3 novalidate">

                    <div class="col-md-6">
                        <label for="region" class="form-label das">Regiones</label>
                        <select onchange="mostrar()" id="region" class="form-select" name="region" aria-label="Default select example">
                            <option selected>---</option>
                            {{#each regiones}}
                            <option id="{{name}}" value="{{name}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="ciudad" class="form-label das">Ciudades</label>
                        <select class="form-select" name="ciudad" aria-label="Default select example">
                            <option selected>---</option>
                            {{#each ciudades}}
                            <option id="{{id_region}}" value="{{id_city}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="operador" class="form-label das">Operador?</label>
                        <select class="form-select" name="operador" aria-label="Default select example">
                            <option selected>---</option>
                            <option value="Si">Si</option>
                            <option value="No">No</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="cat" class="form-label das">Categoria</label>
                        <select class="form-select" name="cat" aria-label="Default select example">
                            <option selected>---</option>
                            {{#each categoria}}
                            <option value="{{nombre}}">{{nombre}}</option>
                            {{/each}}
                        </select>
                    </div>


                    
                    
                    <input id="VALid" name="VALid" type="hidden" value="{{VAL.id}}">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">                        
                        
                                <button type="submit" class="btn btn-success mb-2 float-right">Filtrar</button>
                            
                        
                        
                    </div>
                    
                </form>
            </div>
            
        </div>
         
               
        <h2 class="text-center">Servicios</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each datos}}

             <div class="col">
                <div class="card h-100">
                    <img src="https://img.freepik.com/vector-gratis/vehiculo-excavadora-trabajando_1308-41657.jpg?w=2000" class="card-img-top" alt="..." style="width: 300px; height: 300px;">
                        <div class="card-body">
                            <h5 class="card-title">Nombre: {{nombre }}</h5>
                                <p class="card-text">Marca: {{marca}}</p>
                                <p class="card-text">Año: {{ano}}</p>
                                <p class="card-text">Modelo: {{modelo}}</p>
                                <p class="card-text">Horometro: {{horometro}}</p>
                                <p class="card-text">Operador: {{operador}}</p>
                                <p class="card-text">Estado: {{estado}}</p>
                                <p class="card-text">Categoría: {{categoria}}</p>
                                <p class="card-text">Descripción: {{description}}</p>
                        </div>
                        
                            <div class="card-footer">
                                <div class="row">
                                    <div class="">
                                        <form action="detalle" method="POST" class="row g-3 novalidate was-validated"  novalidate>
                     <input id="id" name="id" type="hidden" value="{{id}}">
                     <div class="col-md-6">
                           <button type="submit" class="btn btn-primary">Ver Detalles</button>
                     </div>
                     </form>
                                    </div>                                   
                                
                                </div>
                            </div>
                       
                    
        
                </div>

            </div>

        {{/each}}



    {{else}}
        <h1>No hay Servicios disponibles </h1>


    {{/if}}
</div>